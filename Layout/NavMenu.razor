@*
    Project: Blazor Control Panel
    Date: 2025-08-08
    Author: J Schneider - j.g@live.com

    Navigation Menu Component
    Main navigation menu component providing hierarchical navigation structure for the application.
    Organizes all application modules and features into logical groups with icons and labels.

    Features:
    - Hierarchical navigation structure
    - Expandable/collapsible navigation groups
    - Icon-based navigation items
    - Active link highlighting
    - Responsive design for mobile devices
    - Organized by functional modules (Customers, Staff, Leads, Projects, etc.)
*@

@inject IUIPersonalizationService UIPersonalizationService

<BaseNavMenu>
    <BaseNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </BaseNavLink>

    <BaseNavGroup Title="Customers" Icon="@Icons.Material.Filled.People" Expanded="true">
        <BaseNavLink Href="/customers" Icon="@Icons.Material.Filled.List">
            Customer List
        </BaseNavLink>
        <BaseNavLink Href="/customers/create" Icon="@Icons.Material.Filled.PersonAdd">
            Add Customer
        </BaseNavLink>
    </BaseNavGroup>

    <BaseNavGroup Title="Staff" Icon="@Icons.Material.Filled.Badge" Expanded="false">
        <BaseNavLink Href="/staff" Icon="@Icons.Material.Filled.List">
            Staff List
        </BaseNavLink>
        <BaseNavLink Href="/staff/create" Icon="@Icons.Material.Filled.PersonAdd">
            Add Staff
        </BaseNavLink>

    </BaseNavGroup>

    <BaseNavGroup Title="Sales" Icon="@Icons.Material.Filled.AttachMoney" Expanded="false">
        <BaseNavLink Href="/estimates" Icon="@Icons.Material.Filled.RequestQuote">
            Estimates
        </BaseNavLink>
        <BaseNavLink Href="/invoices" Icon="@Icons.Material.Filled.Receipt">
            Invoices
        </BaseNavLink>
        <BaseNavLink Href="/leads" Icon="@Icons.Material.Filled.TrendingUp">
            Leads
        </BaseNavLink>
    </BaseNavGroup>

    <BaseNavGroup Title="Projects" Icon="@Icons.Material.Filled.Work" Expanded="false">
        <BaseNavLink Href="/projects" Icon="@Icons.Material.Filled.List">
            Project List
        </BaseNavLink>
        <BaseNavLink Href="/projects/create" Icon="@Icons.Material.Filled.Add">
            New Project
        </BaseNavLink>
        <BaseNavLink Href="/project-templates" Icon="@Icons.Material.Filled.ContentCopy">
            Templates
        </BaseNavLink>
    </BaseNavGroup>

    <BaseNavGroup Title="Finance" Icon="@Icons.Material.Filled.AccountBalance" Expanded="false">
        <BaseNavLink Href="/expenses" Icon="@Icons.Material.Filled.MoneyOff">
            Expenses
        </BaseNavLink>
        <BaseNavLink Href="/contracts" Icon="@Icons.Material.Filled.Description">
            Contracts
        </BaseNavLink>
    </BaseNavGroup>

    <BaseNavGroup Title="Analytics" Icon="@Icons.Material.Filled.Analytics" Expanded="false">
        <BaseNavLink Href="/analytics" Icon="@Icons.Material.Filled.Dashboard">
            Dashboard
        </BaseNavLink>
        <BaseNavLink Href="/analytics/reports" Icon="@Icons.Material.Filled.Assessment">
            Reports
        </BaseNavLink>
        <BaseNavLink Href="/analytics/templates" Icon="@Icons.Material.Filled.Description">
            Report Templates
        </BaseNavLink>
        <BaseNavLink Href="/analytics/trends" Icon="@Icons.Material.Filled.TrendingUp">
            Trends
        </BaseNavLink>
        <BaseNavLink Href="/analytics/comparison" Icon="@Icons.Material.Filled.Compare">
            Comparison
        </BaseNavLink>
    </BaseNavGroup>

    <BaseDivider Class="my-2" />

    <BaseNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">
        Settings
    </BaseNavLink>
</BaseNavMenu>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UIPersonalizationService.LogAccessAsync("Navigation Menu Loaded");
    }
}