@*
    Project: Blazor Control Panel
    Date: 2025-08-08
    Author: J Schneider - j.g@live.com

    Navigation Menu Component
    Main navigation menu component providing hierarchical navigation structure for the application.
    Organizes all application modules and features into logical groups with icons and labels.

    Features:
    - Hierarchical navigation structure
    - Expandable/collapsible navigation groups
    - Icon-based navigation items
    - Active link highlighting
    - Responsive design for mobile devices
    - Organized by functional modules (Customers, Staff, Leads, Projects, etc.)
*@

@inject IUIPersonalizationService UIPersonalizationService

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </MudNavLink>

    <MudNavGroup  Title="Customers" Icon="@Icons.Material.Filled.People" Expanded="true">
        <MudNavLink Href="/customers" Icon="@Icons.Material.Filled.List">
            Customer List
        </MudNavLink>
        <MudNavLink Href="/customers/create" Icon="@Icons.Material.Filled.PersonAdd">
            Add Customer
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Staff" Icon="@Icons.Material.Filled.Badge" Expanded="false">
        <MudNavLink Href="/staff" Icon="@Icons.Material.Filled.List">
            Staff List
        </MudNavLink>
        <MudNavLink Href="/staff/create" Icon="@Icons.Material.Filled.PersonAdd">
            Add Staff
        </MudNavLink>

    </MudNavGroup>

    <MudNavGroup Title="Sales" Icon="@Icons.Material.Filled.AttachMoney" Expanded="false">
        <MudNavLink Href="/estimates" Icon="@Icons.Material.Filled.RequestQuote">
            Estimates
        </MudNavLink>
        <MudNavLink Href="/invoices" Icon="@Icons.Material.Filled.Receipt">
            Invoices
        </MudNavLink>
        <MudNavLink Href="/leads" Icon="@Icons.Material.Filled.TrendingUp">
            Leads
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Projects" Icon="@Icons.Material.Filled.Work" Expanded="false">
        <MudNavLink Href="/projects" Icon="@Icons.Material.Filled.List">
            Project List
        </MudNavLink>
        <MudNavLink Href="/projects/create" Icon="@Icons.Material.Filled.Add">
            New Project
        </MudNavLink>
        <MudNavLink Href="/project-templates" Icon="@Icons.Material.Filled.ContentCopy">
            Templates
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Finance" Icon="@Icons.Material.Filled.AccountBalance" Expanded="false">
        <MudNavLink Href="/expenses" Icon="@Icons.Material.Filled.MoneyOff">
            Expenses
        </MudNavLink>
        <MudNavLink Href="/contracts" Icon="@Icons.Material.Filled.Description">
            Contracts
        </MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Analytics" Icon="@Icons.Material.Filled.Analytics" Expanded="false">
        <MudNavLink Href="/analytics" Icon="@Icons.Material.Filled.Dashboard">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/analytics/reports" Icon="@Icons.Material.Filled.Assessment">
            Reports
        </MudNavLink>
        <MudNavLink Href="/analytics/templates" Icon="@Icons.Material.Filled.Description">
            Report Templates
        </MudNavLink>
        <MudNavLink Href="/analytics/trends" Icon="@Icons.Material.Filled.TrendingUp">
            Trends
        </MudNavLink>
        <MudNavLink Href="/analytics/comparison" Icon="@Icons.Material.Filled.Compare">
            Comparison
        </MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-2" />

    <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">
        Settings
    </MudNavLink>
</MudNavMenu>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UIPersonalizationService.LogAccessAsync("Navigation Menu Loaded");
    }
}