@*
    Project: Blazor Control Panel
    Date: 2025-08-08
    Author: J Schneider - j.g@live.com
    
    Base Progress Circular Component
    Reusable circular progress component wrapper around MudBlazor's MudProgressCircular.
    Provides consistent loading and progress indication across the application.
    
    Features:
    - Configurable progress values
    - Color and size options
    - Indeterminate mode support
    - Consistent progress styling
    - Customizable through parameters
*@

@inherits ComponentBase
@namespace BlazorControlPanel.Components.ComponentBase

<MudProgressCircular Color="@Color"
                     Size="@Size"
                     Indeterminate="@Indeterminate"
                     Value="@Value"
                     StrokeWidth="@StrokeWidth"
                     Class="@Class"
                     Style="@Style" />

@code {
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public Size Size { get; set; } = Size.Medium;
    [Parameter] public bool Indeterminate { get; set; }
    [Parameter] public double Value { get; set; }
    [Parameter] public int StrokeWidth { get; set; } = 3;
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }
}
