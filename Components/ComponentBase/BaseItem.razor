@*
    Project: Blazor Control Panel
    Date: 2025-08-08
    Author: J Schneider - j.g@live.com
    
    Base Item Component
    Reusable item component wrapper around MudBlazor's MudItem for grid layouts.
    Provides consistent grid item behavior and responsive breakpoints across the application.
    
    Features:
    - Responsive breakpoint support
    - Flexible sizing options
    - Consistent grid item behavior
    - Responsive design support
    - Customizable through parameters
*@

@inherits ComponentBase
@namespace BlazorControlPanel.Components.ComponentBase

<MudItem xs="@Xs"
         sm="@(Sm ?? Xs)"
         md="@(Md ?? Sm ?? Xs)"
         lg="@(Lg ?? Md ?? Sm ?? Xs)"
         xl="@(Xl ?? Lg ?? Md ?? Sm ?? Xs)"
         xxl="@(Xxl ?? Xl ?? Lg ?? Md ?? Sm ?? Xs)"
         Class="@Class"
         Style="@Style">
    @ChildContent
</MudItem>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public int Xs { get; set; } = 12;
    [Parameter] public int? Sm { get; set; }
    [Parameter] public int? Md { get; set; }
    [Parameter] public int? Lg { get; set; }
    [Parameter] public int? Xl { get; set; }
    [Parameter] public int? Xxl { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }
}
